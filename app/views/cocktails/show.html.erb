<h1><%= @cocktail.name %> Cocktail</h1>
<%= link_to "Adicionar ingredientes", new_cocktail_dose_path(@cocktail), class: "btn btn-default" %>

<% @cocktail.doses.each do |dose| %>
  <p><%= "#{dose.ingredient.name} - #{dose.description}" %> <%= link_to "Delete", cocktail_dose_path(@cocktail, dose), data: { method: :delete, confirm: "Are you sure?" } %></p>
<% end %>
